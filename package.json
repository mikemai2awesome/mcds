{
  "name": "mcds",
  "type": "module",
  "version": "0.0.1",
  "description": "A minimal, accessible component library that prioritizes semantic HTML, accessibility, and elegant typography inspired by Matthew Carter's typefaces.",
  "homepage": "https://github.com/mikemai2awesome/mcds#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikemai2awesome/mcds.git"
  },
  "bugs": {
    "url": "https://github.com/mikemai2awesome/mcds/issues"
  },
  "keywords": [
    "accessibility",
    "components",
    "design-system",
    "astro",
    "typescript",
    "wcag",
    "semantic-html",
    "css",
    "typography",
    "matthew-carter",
    "progressive-enhancement"
  ],
  "author": "Mike Mai",
  "license": "MIT",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 20",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "type-check": "astro check && tsc --noEmit",
    "type-check:watch": "astro check --watch",
    "ci": "npm run format:check && npm run type-check && npm run lint:check && npm run lint:css && npm run build"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "astro": "^5.1.5",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.29.0",
    "eslint-plugin-astro": "^1.3.1",
    "glob": "^10.3.10",
    "postcss": "^8.4.31",
    "postcss-html": "^1.6.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^16.16.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-order": "^6.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
