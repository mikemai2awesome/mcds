---
interface Props {
  title: string;
  siteName?: string;
}

const { title, siteName = "MCDS" } = Astro.props;
const currentPath = Astro.url.pathname;
const isIndexPage = currentPath === "/" || currentPath === "";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - {siteName}</title>
    <meta
      name="description"
      content="A design system built with Astro, MCSS, semantic HTML, and vanilla JavaScript."
    />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <header class="hero">
      {
        isIndexPage ? (
          <h1><a href="/">{siteName}</a></h1>
        ) : (
          <p><a href="/">{siteName}</a></p>
        )
      }
      <nav>
        <ul>
          <li><a href="/components/accordion">Accordion</a></li>
          <li><a href="/components/alert">Alert</a></li>
          <li><a href="/components/combobox">Combobox</a></li>
          <li><a href="/components/dialog">Dialog</a></li>
          <li><a href="/components/feed">Feed</a></li>
          <li>
            <a href="/components/navigation-popover">Navigation Popover</a>
          </li>
          <li><a href="/components/switch">Switch</a></li>
          <li><a href="/components/tabs">Tabs</a></li>
        </ul>
      </nav>
    </header>
    <hr>
    <main class="doc-main">
      <slot />
    </main>
    <hr>
    <footer>
      <p><em>The design system is created by <a href="https://mikemai.net">Mike Mai</a> with the help of AI buddy <a href="https://cursor.com">Cursor</a>.</em></p>
    </footer>
  </body>
</html>

<style is:global>
  @import url("../styles/global.css");
</style>
